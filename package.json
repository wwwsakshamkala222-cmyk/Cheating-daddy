{
  "name": "cheating-daddy-react",
  "version": "1.0.0",
  "description": "An Electron app with a React frontend.",
  "main": "main.js",
  "author": "AI Developer (Gemini)",
  "license": "ISC",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "build:renderer": "webpack --config webpack.config.js --mode production",
    "dev:renderer": "webpack --config webpack.config.js --mode development --watch",
    "dev:main": "electron .",
    "dev": "npm run dev:renderer & npm run dev:main",
    "package": "npm run build:renderer && electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.startup.cheating-daddy",
    "productName": "CheatingDaddyReact",
    "files": [
      "main.js",
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    }
  }
}
